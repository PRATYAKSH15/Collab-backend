{
  "compilerOptions": {
    // File Layout
    "rootDir": "./src",
    "outDir": "./dist",

    // Environment Settings
    "module": "CommonJS",   // Use uppercase "C"
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["node"],

    // Other Outputs
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    // Stricter Typechecking Options
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    // Recommended Options
    "strict": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    // ✅ Add this
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true
    // ❌ Remove "verbatimModuleSyntax"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
